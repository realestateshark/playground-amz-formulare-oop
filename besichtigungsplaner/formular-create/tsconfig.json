{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "preserveConstEnums": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF"
  },
  "include": [
    "src", 
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}